fop="$1" # scale seamless enhance emboss oilify cartoon mosaic cubism sharpen sobel laplace edgesobel edgelaplace neon dog noise spread desaturate softglow gauss 
fin="$2" # file in image
if [[ -n "$3" ]]
then
	fout="$3"
else
	fout=${fin##*/}
	fout=${fout%%.*}
	fout="$fout${fop^}.jpg"
fi

echo "$fop $fin $fout"
gimp -i -b '(xl-make-'"$fop"' "'"$fin"'" "'"$fout"'")' -b '(gimp-quit 0)'
